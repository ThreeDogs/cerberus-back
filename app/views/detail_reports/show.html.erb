<script>
	d3.json("http://127.0.0.1:3000/testdata.json",drawCharts);

	$('#event_flow').scroll(function () {
		$('#cpu').scrollLeft($(this).scrollLeft());
		$('#memory').scrollLeft($(this).scrollLeft());
		$('#screenshot_view').scrollLeft($(this).scrollLeft());
	});
	$('#cpu').scroll(function () {
		$('#event_flow').scrollLeft($(this).scrollLeft());
		$('#memory').scrollLeft($(this).scrollLeft());
		$('#screenshot_view').scrollLeft($(this).scrollLeft());
	});
