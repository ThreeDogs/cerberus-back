<%= render "shared/header" %>

<div class="container-fluid">
  <div class="row-fluid">
    <%= render 'shared/side_bar' %>
    <div class="col-md-12 contents">
      <div class="total-report-head">
        <p><img src="/assets/Result.png">Test Results</p>
        <p class="subline">Test Results > Full Report </p>
      </div>

      <% unless @total_report.status %>
        <div class="progress progress-striped active">
          <div class="progress-bar" id="test-progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
          </div>
        </div>

        <%= javascript_tag do %>
          progressUpdate(<%= @total_report.id %>);
        <% end %>
      <% end %>

      <table class="table table-hover">
        <tr>
          <th>Rank</th>
          <th>Status</th>
          <th>Test Scenario</th>
          <th>Device</th>
          <th>OS Version</th>
          <th>Running Time</th>
          <th></th>
        </tr>
        <% @detail_reports.each do |detail_report| %>
          <tr>
            <td><%= detail_report.rank %></td>
            <td><%= detail_report.get_status %></td>
            <td><%= detail_report.test_scenario_name %></td>
            <td><%= detail_report.device_name %></td>
            <td><%= detail_report.os_version %></td>
            <td><%= detail_report.get_running_time %></td>
            <td><%= link_to "Show", total_report_detail_report_path(@total_report, detail_report) %></td>
          </tr>
        <% end  %>
      </table>
    </div>
  </div>  
</div>

