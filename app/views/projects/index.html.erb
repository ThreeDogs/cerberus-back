<%= render "shared/header" %>

<div class="container">
  <div class="headline">
    <p>My projects list</p>
  </div>

  <% @projects.each do |project| %>
  <div class="project_box">
    <div class="color_band"></div>
    <div class="app_icon_box"><img src="#"></div>
    <div class="app_info_box">
      <p class="project_title"><%= project.name %></p>
      <span class="date_version">Ver</span>0.0.1<br>
      <span class="date_version">Date</span>14.MAR.20 9:20pm
    </div>
    <div class="test_fail_box">
      <p>Test Fail</p>
      <div class="test_fail_num">
        <div class="test_fail_each">A</div>
        <div class="test_fail_each">B</div>
        <div class="test_fail_each">C</div>
        <div class="test_fail_each">D</div>
      </div>
    </div>
  </div>
  <% end %>

  <%= link_to 'New Project', new_project_path %> 
</div>