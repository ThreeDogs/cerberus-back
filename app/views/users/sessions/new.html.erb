<%= stylesheet_link_tag  "login" %>

<div class="container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html: {class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">Please Login</h2> 
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", required: true %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
    <label class="checkbox">
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>     
    </label>

    <div><%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %></div>

    <%= render "users/shared/links" %>
  <% end %>  
</div>
