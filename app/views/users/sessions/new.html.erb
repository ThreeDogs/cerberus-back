<div class="container">
  <div class="col-md-4 col-md-offset-3 login-area">
    <div class="login-header">
      <%= image_tag "/assets/Logo.png" %>
    </div>
    <div class="login-body">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html: {class: "form-signin"}) do |f| %>
        <%= f.email_field :email, autofocus: true, class: "form-control login-form email-field", placeholder: "Email address", required: true %>
        <%= f.password_field :password, class: "form-control login-form", placeholder: "Password", required: true %>

        <div><%= f.submit "Login", class: "btn btn-lg btn-back" %></div>

        <div class="links">
          <div class="sign-up pull-left">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name) %><br />
            <% end -%>
          </div>

          <div class="password pull-left">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>    
          </div>
        </div>
      <% end %>  
    </div>
  </div>
</div>

<style type="text/css">
  .login-area{
    width: 550px;
  }

  .login-header {
    width: 100%;
    text-align: center;
    background-color: #5DBE88;
    height: 124px;
  }

  img{
    height: 60px;
    margin-top: 35px;
  }

  .login-body {
    background-color: #EFEEEE;
    width: 100%;
    padding-top: 42px;
    height: 300px;
    text-align: center;
  }  

  .login-form{
    margin-left: 100px;
    margin-bottom: 14px;
    width: 60%;
  }

  .btn-back{
    background-color: #4FB475;
    color: #ffffff;
  }

  .links{
    margin-top: 50px;
  }

  .sign-up{
    margin-left: 150px;
  }

  .password{
    margin-left: 30px;
  }

  .links a {
    color: #287044;
  }
</style>