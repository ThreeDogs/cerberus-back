<div class="container">
  <div class="col-md-4 col-md-offset-3 login-area">
    <div class="login-header">
      <%= image_tag "/assets/Logo.png" %>
    </div>
    <div class="login-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),html: {class: "form-signin"}) do |f| %>
        <%= f.email_field :email, autofocus: true, class: "form-control login-form email-field", placeholder: "Email address", required: true %>
        <%= f.password_field :password, class: "form-control login-form", placeholder: "Password", required: true %>

        <%= f.password_field :password_confirmation, class: "form-control login-form", placeholder: "Password Confirmation", required: true %>

        <div><%= f.submit "Sign Up", class: "btn btn-lg btn-back" %></div>

        <div class="links">
          <%- if controller_name != 'sessions' %>
					  <%= link_to "Sign in", new_session_path(resource_name) %><br />
					<% end -%>
        </div>
      <% end %>  
    </div>
  </div>
</div>

<style type="text/css">
  .login-area{
    width: 550px;
  }

  .login-header {
    width: 100%;
    text-align: center;
    background-color: #5DBE88;
    height: 124px;
  }

  img{
    height: 60px;
    margin-top: 35px;
  }

  .login-body {
    background-color: #EFEEEE;
    padding-top: 42px;
    height: 350px;
    text-align: center;
  }  

  .login-form{
    margin-left: 100px;
    margin-bottom: 14px;
    width: 60%;
  }

  .btn-back{
    background-color: #4FB475;
    color: #ffffff;
  }

  .links{
    margin-top: 50px;
  }

  .sign-in{
    margin-left: 150px;
  }
</style>