<%= render "shared/header" %>

<div class="container-fluid">
	<div class="row-fluid">
		<%= render 'shared/side_bar' %>
		
		<div class="col-md-12 contents">
			<div class="page-title">
				<img src="/assets/scenario.png">Test Scenarios
			</div>
			<div class="below-page-title">Test Scenarios > Import Test Code</div>

			<div class="scenario-info" >
				<div class="scenario-info-title">
					<%= form_for([@project, @test_code]) do |f| %>
					  <% if @test_code.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@test_code.errors.count, "error") %> prohibited this test_code from being saved:</h2>

					      <ul>
					      <% @test_code.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>

					  <div class="field">
					    <p>Import Java Test (Robotium) Code</p>
					    <%= f.file_field :import_code_java %>
					  </div>
					  <div class="actions pull-right">
					    <%= f.submit "Import Code", class: "btn btn-success" %>
					  </div>
					<% end %>					
				</div>
			</div>
			
		</div>
	</div>
	
</div>